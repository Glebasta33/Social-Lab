<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:elevation="2dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="4dp">

        <TextView
            android:id="@+id/tv_number_of_answer"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="4"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_question"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_research_title" />

        <TextView
            android:id="@+id/tv_research_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Цифровое поведение студентов"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/tv_number_of_answer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_question"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Оцените свой уровень стресса от 1 до 5 Оцените свой уровень стресса от 1 до 5"
            app:layout_constraintEnd_toStartOf="@+id/tv_number_of_answer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_research_title" />

        <ImageView
            android:id="@+id/iv_appointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_baseline_watch_later_20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_question" />

        <TextView
            android:id="@+id/tv_appointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 7.02.2022 - 17:03"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_appointment"
            app:layout_constraintStart_toEndOf="@+id/iv_appointment"
            app:layout_constraintTop_toTopOf="@+id/iv_appointment" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>